{
  "name": "baidu-netdisk-node",
  "version": "0.1.0",
  "description": "BaiduNetdiskNode based on official developer api",
  "author": "keenghost",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/keenghost/BaiduNetdiskNode.git"
  },
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "pnpm": "^10.0.0"
  },
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks",
    "dev": "tsx scripts/dev.ts",
    "test": "tsx scripts/test.ts",
    "build": "tsx scripts/build.ts",
    "release": "tsx scripts/release.ts",
    "check-types": "tsx scripts/check-types.ts"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged && pnpm check-types",
    "commit-msg": "pnpm tsx scripts/check-commit-msg.ts"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint",
      "prettier --write",
      "pnpm tsx scripts/check-modules.ts"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/minimist": "^1.2.5",
    "@types/node": "^22.18.0",
    "@vue/compiler-sfc": "^3.5.20",
    "concurrently": "^9.2.1",
    "eslint": "^9.34.0",
    "eslint-plugin-vue": "^9.33.0",
    "lint-staged": "^15.5.2",
    "minimist": "^1.2.8",
    "picocolors": "^1.1.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "simple-git-hooks": "^2.13.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0"
  }
}
